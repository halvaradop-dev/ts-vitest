{
  "name": "ts-vitest",
  "version": "1.0.0",
  "description": "A TypeScript project setup with Vitest for testing and Turborepo for monorepo management.",
  "private": true,
  "scripts": {
    "dev": "turbo dev --parallel",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "vitest",
    "turborepo",
    "turbo",
    "typescript",
    "testing"
  ],
  "homepage": "https://github.com/halvaradop-dev/ts-vitest",
  "bugs": {
    "url": "https://github.com/halvaradop-dev/ts-vitest"
  },
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.7.4",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  },
  "packageManager": "pnpm@9.12.0",
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "printWidth": 150,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml",
          "*.yaml",
          "README.md"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
